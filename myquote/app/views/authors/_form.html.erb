<!-- Form of making a new author -->

<!-- Error message displayed, if there is any error message -->
<%= form_with(model: author) do |form| %>
  <% if author.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
        <% author.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :fname, placeholder: 'First Name*', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :lname, placeholder: 'Last Name', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.number_field :birth_year, placeholder: 'Birth Year', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.number_field :death_year, placeholder: 'Death Year', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :biography, placeholder: 'Biography', class: 'form-control' %>
  </div>

  <div class="mt-3">
  <!-- If it's making a new author -->
  <% if author.new_record? %>
  <!-- Make the 'Create' button -->
    <%= form.submit 'Create', class: 'btn btn-primary' %>
  <% else %>
  <!-- Make the 'Update' button -->
    <%= form.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
  </div>

<% end %>
