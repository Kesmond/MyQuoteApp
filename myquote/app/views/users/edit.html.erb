<div stlye="padding-top: 10px;">
<!-- Error message displayed, if there is any error message -->
<% if flash[:error] %>
    <p class="error" style="color:red;"><%= flash[:error] %></p>
<% end %>

<!-- View's heading according to which role (user or admin) is accessing it -->
<!-- If user has logged in and its an administrator -->
<% if logged_in? && is_administrator? %>
  <h3>Update User Details</h3>
  <% else %>
  <h3>Update Your Details</h3>
  <% end %>
</div>

<%= render "form", user: @user %>

<br>
<!-- Administrator only -->
<% if logged_in? && is_administrator? %>
<div style="padding-top: 10px;">
<div>
  <%= link_to "Show this user", @user %> |
  <%= link_to "Back to users", users_path %>
</div>
</div>
<% end %>